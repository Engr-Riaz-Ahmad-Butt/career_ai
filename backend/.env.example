# Database
DATABASE_URL="postgresql://user:password@localhost:5432/careerforge?schema=public"

# Server
PORT=5000
NODE_ENV=development

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@careerforge.ai

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# AI API Keys (Gemini for document generation)
GEMINI_API_KEY=your-gemini-api-key-here

# AI Prompt Enhancement (set to 'false' to use basic prompts)
USE_ENHANCED_PROMPTS=true

# AI Providers (optional - for fallback)
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379
